<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pastel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Loss Macros"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"/>

        <!-- ================= PROTEIN BOX ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:elevation="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/protein"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High • 1.6–2.0 g/kg"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/proteinGramTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95–120 g / day"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/viewProteinFoodsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Protein Foods"
                android:layout_marginTop="12dp"
                style="@style/PrimaryButton"/>

        </LinearLayout>

        <!-- ================= CARBS BOX ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:elevation="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/carbs"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbohydrates"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moderate • 3–4 g/kg"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/carbsGramTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180–240 g / day"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/viewCarbsFoodsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Carb Foods"
                android:layout_marginTop="12dp"
                style="@style/PrimaryButton"/>
        </LinearLayout>

        <!-- ================= FATS BOX ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:elevation="8dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/fats"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fats"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low • 0.6–0.8 g/kg"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/fatsGramTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36–48 g / day"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/viewFatsFoodsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Fat Foods"
                android:layout_marginTop="12dp"
                style="@style/PrimaryButton"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
