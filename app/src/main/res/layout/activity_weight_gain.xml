<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pastel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Gain Macros"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- ================= PROTEIN BOX ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:elevation="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/protein"/>

            <TextView
                android:text="Protein"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="High • 1.8–2.2 g/kg"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/proteinGramTv"
                android:text="108–132 g / day"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/viewProteinFoodsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Protein Foods"
                android:layout_marginTop="12dp"
                style="@style/PrimaryButton"/>
        </LinearLayout>

        <!-- ================= CARBS BOX ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:elevation="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/carbs"/>

            <TextView
                android:text="Carbohydrates"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="High • 4–6 g/kg"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/carbsGramTv"
                android:text="240–360 g / day"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/viewCarbsFoodsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Carb Foods"
                android:layout_marginTop="12dp"
                style="@style/PrimaryButton"/>

        </LinearLayout>

        <!-- ================= FATS BOX ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:elevation="8dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/fats"/>

            <TextView
                android:text="Fats"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Moderate • 0.8–1.0 g/kg"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/fatsGramTv"
                android:text="48–60 g / day"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <Button
                android:id="@+id/viewFatsFoodsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Fat Foods"
                android:layout_marginTop="12dp"
                style="@style/PrimaryButton"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
